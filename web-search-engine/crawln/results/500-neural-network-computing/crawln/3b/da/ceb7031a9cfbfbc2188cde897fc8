	<script type="text/javascript" >
		
		var ybAdsMap = {
			'gpt-showcase':'[300,250]',
			'gpt-leaderboard': '[728,90],[970,90],[970,250],[768,66]'
		}
		var yieldbotPubId = "d7ef";

		// Yieldbot.com Intent Tag LOADING
		var ybotq = ybotq || [];
		(function() {
		 	var useSSL = 'https:' == document.location.protocol;
		    var js = document.createElement('script');
		    js.src = (useSSL ? 'https:' : 'http:') + '//cdn.yldbt.com/js/yieldbot.intent.js';
			var node = document.getElementsByTagName('script')[0];
			node.parentNode.insertBefore(js, node);
		})();

		// Yieldbot.com Intent Tag ACTIVATION 
		ybotq.push(function () {
			yieldbot.pub(yieldbotPubId);
			for (var propt in ybAdsMap) {
				//console.log(propt+": "+ybAdsMap[propt]);
				yieldbot.defineSlot(propt);
			}
		yieldbot.enableAsync();
		yieldbot.go();
		});
		
	</script>
	<!-- End Yieldbot -->



