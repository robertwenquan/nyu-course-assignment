IDG.video.initPlayer('homepageVideoPlayer');


if (typeof IDG.video.players['homepageVideoPlayer'].vjs.ima3 !== 'undefined') {
	IDG.video.players['homepageVideoPlayer'].vjs.ima3({
		serverUrl:"http://pubads.g.doubleclick.net/gampad/ads?sz=640x480&iu=/8456/IDG.US_CSMB_PCWorld.com/homepage_door&ciu_szs=300x250,728x90&impl=s&gdfp_req=1&env=vp&output=vast&unviewed_position_start=1&url=[referrer_url]&description_url=http%3A%2F%2Fwww.pcworld.com&correlator=[timestamp]&cust_params=video-id%3D56409%26video-channel%3Dhardcore-hardware%26video-campaign%3D%26video-series%3D%26video-category%3D%26video-tag%3D",
		prerollTimeout:5000, 
