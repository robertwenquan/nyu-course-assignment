s.prop42 = sModules;
s.eVar42="D=c42";
//now set events
s.events="";


s.list3=s.prop42+","+s.eVar42;
//force all values to lower case for reporting consistency
for(var p in s){
	if(s[p] && p.match(/^(prop|ceVar)\d+$/)){
		//console.log(p+": "+s[p]);
		s[p] = s[p].toLowerCase();
		//console.log(p+": "+s[p]);
	}
}
//END OMNITURE VARS 

/* Conversion Variables */
s.campaign=getTrackingToken('tk') ? "tokens:"+getTrackingToken('tk') : "";

