            var eml_subject = encodeURI("Thought you'd find this story interesting");
            var eml_body = encodeURI("Thought you'd find this story interesting: ") + url;
          
            /*Google+ processing */
            var gplus_url = "https://plusone.google.com/_/+1/confirm?hl=en-US&url=" + url;
            $("#gplus_button").attr("href", gplus_url);
          
            /*LinkedIn processing*/
            var li_url = "http://www.linkedin.com/cws/share?url=" + url;
            $("#linkedin_button").attr("href", li_url);
          
            /*Facebook processing */
            var fb_url = "http://www.facebook.com/sharer.php?u=" + url + "&t=" + doc_title;
            $("#facebook_button").attr("href", fb_url);
                    
            /*Twitter processing*/
            var tw_url = "http://twitter.com/share?text=" + doc_title + "&url=" + url;
            $("#twitter_button").attr("href", tw_url);
          
            /*Mail processing */
            var eml_url = "mailto:?&subject=" + eml_subject + "&body=" + eml_body;
            $("#email_button").attr("href", eml_url);
