<section id="follow-module">
	<div class="cols-wrapper">
		<div id="followCarousel" class="item-carousel follow-carousel clearfix">
		<a class="prev browse left"><i class="ss-icon ss-left"></i></a>
  			<div class="carousel-inside-crop">
	    		<div class="items carousel-items clearfix">
				
					
				














	
		
		
		
		<div class="excerpt">
			<div class="author-name-top"><a rel="author" itemprop="url" href="/author/Sarah-K.-White/"><span itemprop="name">Sarah K. White</span></a></div>
			<div class="excerpt-img">
			
				
				
				
			
















<a href="/author/Sarah-K.-White/" rel="author" title="Sarah K. White"><img  class="lazy bylineImage  imgId100581813 " data-original="http://core5.staticworld.net/images/article/2015/04/sarah-white_headshot-100581813-byline.jpg" alt="Sarah K. White" itemprop="image" /></a>

