<script>
// Configures behavior of Video-Playlist features.
// Causes an anchor click to swap the source of the related video iframe.
$('[data-videoplaylist]').on('click', 'a', function(evt) {
  evt.preventDefault();
  var target = $(evt.target).closest('[data-videoplaylist]').attr('data-videoplaylist');
  $('iframe#'+target).attr('src', $(evt.target).closest('a').attr('href'));
});
</script>

