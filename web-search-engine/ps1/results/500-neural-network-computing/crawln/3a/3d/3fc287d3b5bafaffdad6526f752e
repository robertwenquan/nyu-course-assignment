        IDG.Eloqua.invoke_flash("social-" + type);
	}
    // Record Social Event in pixel logger
    if (pixelLogString !== undefined) {
    	$thm.logPlEvent({"b":"th","e":pixelLogString,"t":"article","id":""});
    }   
}

