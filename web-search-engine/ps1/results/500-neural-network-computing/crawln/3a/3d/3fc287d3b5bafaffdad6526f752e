IDG.video.players['homepageVideoPlayer'].vjs.ready(function() {
	
	
	$thm.logPlEvent({"b":"th","e":"view","t":"media","id":"57431"});

	var thisPlayer = IDG.video.players['homepageVideoPlayer'];		
	
	
	
	
				
	
		
			thisPlayer.playlistIds = new Array(57431, 57554, 56143, 56183, 55925, 52903, 49030, 58003, 57784, 57664, 57605, 57743);
			thisPlayer.playlistPos = 0;
		
		
		this.addClass('hide-controls');			
		this.addClass('player-not-started');
		
					
		$('#homepageVideoPlayer .vjs-big-play-button').append($('#homepageVideoModule .lead-video-info'));
		
		
		this.on('ended', function() {
			if (typeof thisPlayer.playlistIds !== 'undefined') {
				thisPlayer.advance();
			}
		});
	
	

				
	
	
	this.on("play", function() {
				
		$thm.logPlEvent({"b":"th","e":"play","t":"media","id":"57431"});
		if (window.PARSELY) {
            PARSELY.videoPlaying = true;
            //console.log("PARSELY.videoPlaying = true");
        }
        
        
					
		
			thisPlayer.vjs.removeClass('hide-controls'); 
			thisPlayer.vjs.removeClass('player-not-started');
			
				
				$('#homepageVideoPlayer .vjs-poster').remove();
				$('#homepageVideoPlayer .vjs-big-play-button .lead-video-info').remove();
				thisPlayer.vjs.removeClass('show-helper-text');
				
				//this visually selects the initially loaded video in the playlist if the user initiates the play action from the player itself
				if ($('.load-video.selected').length == 0) {
					var currentVideoId = thisPlayer.playlistIds[thisPlayer.playlistPos];
					var currentVideoItem = $('.load-video[data-id=\''+currentVideoId+'\']');
					$(currentVideoItem).addClass('selected');
				}
											
		
	});
	this.on("pause", function() { 
		if (window.PARSELY) {
            PARSELY.videoPlaying = false;
            //console.log("PARSELY.videoPlaying = false");
        }
	});	
	
	var adCountDown;
	this.on("adstart", function() {
		IDG.GPT.backfillCompanionIfEmpty('gpt-skin', $('#skinAdTarget'));
		if (IDG.video.players['homepageVideoPlayer'].vjs.ima3.adsManager) {
			var $thisVideo = $(this.el());
			var $thisVideoParent = $thisVideo.parent();
			var $thisVideoItemText = $thisVideoParent.find('.item-text');
			var $thisVideoOverlay = $thisVideoParent.find('.over');
			$thisVideo.removeClass('not-loaded');
			$thisVideoItemText.remove();
			$thisVideoOverlay.remove();		
			$('#homepageVideoPlayer').append('<div id="homepageVideoPlayerCountdown" class="preroll-countdown hidden">Your video begins in <span class="countdown">' + Math.round(IDG.video.players['homepageVideoPlayer'].vjs.ima3.adsManager.getRemainingTime()) + ' seconds.</span></div>');
			adCountDown = setInterval(function() {
			  var timeRemaining = IDG.video.players['homepageVideoPlayer'].vjs.ima3.adsManager.getRemainingTime();
			  var timeRemainingRounded = Math.round(timeRemaining);			 
			  if (Math.round(timeRemaining) > 0 && $("#homepageVideoPlayerCountdown").hasClass('hidden')) {
			  		$("#homepageVideoPlayerCountdown").removeClass('hidden')
			  } 
			  var timeUnit;
			  if (timeRemainingRounded == 1) {
				  timeUnit = 'second';
			  }
			  else {
				  timeUnit = 'seconds';
			  }
			  	$("#homepageVideoPlayerCountdown .countdown").html(Math.round(timeRemaining) + ' ' + timeUnit + '.');
			  }, 1000);
		}	
	});
	this.on("adserror", function() { 
		IDG.GPT.backfillCompanionIfEmpty('gpt-skin', $('#skinAdTarget')); 
	});
	this.on("adend", function(){
		if (adCountDown) {
			clearInterval(adCountDown);
		}
		$("#homepageVideoPlayerCountdown").remove();
	});
	
	
	
	
});
	

$(document).ready(function() {	
	$('.load-video').click(function() {
		$('#homepageVideoPlayer .vjs-big-play-button .lead-video-info').remove();
		var thisPlayer = IDG.video.players['homepageVideoPlayer'];
		var videoId = $(this).attr('data-id');
		//don't swap out the playing video if it's already the currently-playing video 
		if (!$(this).hasClass('selected')) {
			thisPlayer.clearAds();
			var thisEl = $(this);
			thisPlayer.swap(videoId, function(error){
				if (error == null) {
					if ($(thisEl).find('.sponsored-video').length == 0) {
						thisPlayer.setPreroll($(thisEl).attr('data-ima-url'));
					}
					setNowPlaying(thisPlayer);
					thisPlayer.vjs.play();
				}
				else {
					thisPlayer.advance();
				}
			});
			
			//set helper text to show if you're loading this on mobile
			thisPlayer.vjs.addClass('show-helper-text'); 
			
			//move the page back up to the top of the video player - this is especially important on horizontal mobile devices
			//we don't want to do this on autoadvance, only if someone taps/clicks on a new video (otherwise we'd put it in setNowPlaying)
			
			if($thm.deviceWidthAtLeast($thm.deviceBreakpoints.tablet)) {
				//scroll to top of video module on larger devices
				var videoTop = $('.video-module').offset().top;
			}
			else {
				//scroll to top of player itself on smaller devices
				var videoTop = $('.video-pane').offset().top;
			}
			$('html,body').animate({scrollTop: videoTop}, 1000);
			}
	   });
});

function setNowPlaying(thisPlayer) {
	$('.load-video').removeClass('selected');
	var currentVideoId = thisPlayer.playlistIds[thisPlayer.playlistPos];
	var currentVideoItem = $('.load-video[data-id=\''+currentVideoId+'\']');
	$(currentVideoItem).addClass('selected');
	
	//scroll to the video - nice to have if the selected video is below the scroll pane
	
	var maxScroll = $('.video-listing').height() - $('.video-listing-scroll').height();
	var scrollTo = $('.video-listing-scroll').scrollTop() + $(currentVideoItem).position().top;
	
	if (scrollTo > maxScroll) {
		$('.video-listing-scroll').animate({scrollTop: maxScroll}, 1000);
	}
	else {
		$('.video-listing-scroll').animate({scrollTop: scrollTo}, 1000);
	}
}

